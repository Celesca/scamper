{
    "manifest_version": 3,
    "name": "AI Phishing Hunter",
    "version": "1.0",
    "description": "Detects zero-day phishing websites using AI.",
    "permissions": [
        "activeTab",
        "scripting",
        "notifications",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ]
}